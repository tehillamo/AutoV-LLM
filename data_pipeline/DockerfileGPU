FROM nvidia/cuda:11.8.0-cudnn8-runtime-ubuntu20.04

WORKDIR /usr/src/app

ARG DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC
RUN apt-get update && apt-get install -y --no-install-recommends \
    tzdata \
    build-essential \
    curl \
    ca-certificates \
    libsndfile1 \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*


RUN apt-get update && apt-get install -y python3.10 python3-pip
RUN pip install --no-cache-dir --upgrade pip


COPY requirements.txt ./
RUN pip install --no-cache-dir -r requirements.txt

RUN pip install whisperx==3.4.2
RUN pip install numpy==1.26.4

# Ensure that the installed version of torch is compatible with CUDA
RUN pip install torch==2.7.1+cu118 -f https://download.pytorch.org/whl/torch_stable.html
RUN pip install torchaudio==2.7.2+cu118 -f https://download.pytorch.org/whl/torch_stable.html

COPY . .
CMD ["python3", "-u", "scripts.py", "--device", "cuda"]